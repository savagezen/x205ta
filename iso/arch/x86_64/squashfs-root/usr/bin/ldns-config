#!/bin/sh

prefix="/usr"
exec_prefix="${prefix}"
VERSION="1.6.17"
CFLAGS="-Wstrict-prototypes -Wwrite-strings -W -Wall -march=x86-64 -mtune=generic -O2 -pipe -fstack-protector-strong"
CPPFLAGS="-D_FORTIFY_SOURCE=2  "
LDFLAGS="-Wl,-O1,--sort-common,--as-needed,-z,relro  "
LIBS="  -lcrypto -ldl"
LIBDIR="${exec_prefix}/lib"
INCLUDEDIR="${prefix}/include"
LIBVERSION="@LIBLDNS_CURRENT@.@LIBLDNS_REVISION@.@LIBLDNS_AGE@"

for arg in $@
do
    if [ $arg = "--cflags" ]
    then
        echo "-I${INCLUDEDIR}"
    fi
    if [ $arg = "--libs" ]
    then
        echo "${LDFLAGS} -L${LIBDIR} ${LIBS} -lldns"
    fi
    if [ $arg = "-h" ] || [ $arg = "--help" ]
    then
        echo "Usage: $0 [--cflags] [--libs] [--version]"
    fi
    if [ $arg = "--version" ]
    then
        echo "${VERSION}"
    fi
    if [ $arg = "--libversion" ]
    then
        echo "${LIBVERSION}"
    fi
done
